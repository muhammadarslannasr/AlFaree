<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@drawable/round_dialog_border"
    android:layout_height="wrap_content">


    <TextView
        android:id="@+id/chooseLanguageID"
        android:layout_width="match_parent"
        android:text="SELECT CONTACT TO Call"
        android:background="@color/white"
        android:fontFamily="serif-monospace"
        android:textColor="@color/colorPrimary"
        android:textAllCaps="true"
        android:layout_marginTop="5dp"
        android:textSize="18sp"
        android:textAlignment="center"
        android:layout_height="wrap_content" />



    <View
        android:id="@+id/view_contacts"
        android:layout_width="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_height="0.2dp"
        android:background="#999999"
        android:layout_below="@id/chooseLanguageID" />


    <android.support.v7.widget.RecyclerView
        android:id="@+id/recylerViewID"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:background="@color/white"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/view_contacts">
    </android.support.v7.widget.RecyclerView>

    <Button
        android:id="@+id/cancel_btnID"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/recylerViewID"
        android:layout_marginTop="8dp"
        android:background="@drawable/style_edittext_round_btn"
        android:text="Cancel"
        android:visibility="gone"
        android:textColor="#FFFFFF"
        android:textStyle="italic" />

</RelativeLayout>