<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/splash_background"
    tools:context="com.thexsolution.propertyprojectf11.Activities.ProfileActivity">


    <TextView
        android:layout_marginTop="20dp"
        android:textSize="22sp"
        android:fontFamily="serif-monospace"
        android:textColor="@android:color/white"
        android:layout_gravity="center"
        android:text="Profile Detail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:layout_marginTop="20dp"
        android:text="User Name"
        android:textColor="@android:color/white"
        android:textSize="22sp"
        android:fontFamily="serif-monospace"
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/person_nameID"
        android:fontFamily="serif-monospace"
        android:textColor="@android:color/white"
        android:layout_gravity="center"
        android:textSize="20sp"
        android:text="Muhammad Arslan Nasr"
        android:layout_marginTop="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:layout_marginTop="20dp"
        android:text="User Email"
        android:textColor="@android:color/white"
        android:textSize="22sp"
        android:fontFamily="serif-monospace"
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/person_EmailID"
        android:fontFamily="serif-monospace"
        android:textColor="@android:color/white"
        android:layout_gravity="center"
        android:textSize="20sp"
        android:text="iamarslannasr@gmail.com"
        android:layout_marginTop="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

</LinearLayout>
